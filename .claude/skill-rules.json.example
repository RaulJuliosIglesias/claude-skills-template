{
  "rules": [
    {
      "skill": "project_protocol",
      "description": "Protocolo maestro de desarrollo",
      "triggers": [
        {
          "type": "keyword",
          "patterns": [
            "desarrollar",
            "implementar",
            "crear",
            "agregar",
            "nuevo proyecto",
            "desarrollo",
            "desarrollar",
            "build",
            "create",
            "implement"
          ]
        },
        {
          "type": "file_path",
          "patterns": [
            "**/src/**",
            "**/components/**",
            "**/services/**",
            "**/api/**"
          ]
        }
      ]
    },
    {
      "skill": "requirements_analyzer",
      "description": "Analizador de requerimientos",
      "triggers": [
        {
          "type": "keyword",
          "patterns": [
            "necesito",
            "quiero",
            "requiero",
            "requerimiento",
            "funcionalidad",
            "feature",
            "necesidad",
            "need",
            "require",
            "requirement"
          ]
        },
        {
          "type": "context",
          "patterns": [
            "qué",
            "cómo",
            "por qué",
            "what",
            "how",
            "why"
          ]
        }
      ]
    },
    {
      "skill": "codebase_understanding",
      "description": "Comprensión del código base",
      "triggers": [
        {
          "type": "keyword",
          "patterns": [
            "entender",
            "analizar",
            "revisar código",
            "código existente",
            "arquitectura",
            "estructura",
            "understand",
            "analyze",
            "review code",
            "architecture"
          ]
        },
        {
          "type": "file_path",
          "patterns": [
            "**/*.ts",
            "**/*.tsx",
            "**/*.js",
            "**/*.jsx",
            "**/*.py",
            "**/package.json",
            "**/requirements.txt"
          ]
        }
      ]
    },
    {
      "skill": "implementation_protocol",
      "description": "Protocolo de implementación",
      "triggers": [
        {
          "type": "keyword",
          "patterns": [
            "implementar",
            "código",
            "escribir",
            "crear archivo",
            "modificar",
            "implement",
            "code",
            "write",
            "create file",
            "modify"
          ]
        },
        {
          "type": "file_path",
          "patterns": [
            "**/src/**",
            "**/components/**",
            "**/utils/**",
            "**/services/**"
          ]
        },
        {
          "type": "action",
          "patterns": [
            "file_edit",
            "file_create",
            "code_change"
          ]
        }
      ]
    }
  ],
  "settings": {
    "auto_suggest": true,
    "auto_activate": false,
    "show_reason": true
  }
}
