{
  "rules": [
    {
      "skill": "project_protocol",
      "description": "Master development protocol",
      "triggers": [
        {
          "type": "keyword",
          "patterns": [
            "develop",
            "implement",
            "create",
            "add",
            "new project",
            "development",
            "develop",
            "build",
            "create",
            "implement"
          ]
        },
        {
          "type": "file_path",
          "patterns": [
            "**/src/**",
            "**/components/**",
            "**/services/**",
            "**/api/**"
          ]
        }
      ]
    },
    {
      "skill": "requirements_analyzer",
      "description": "Requirements analyzer",
      "triggers": [
        {
          "type": "keyword",
          "patterns": [
            "need",
            "want",
            "require",
            "requirement",
            "functionality",
            "feature",
            "need",
            "require",
            "requirement"
          ]
        },
        {
          "type": "context",
          "patterns": [
            "what",
            "how",
            "why",
            "what",
            "how",
            "why"
          ]
        }
      ]
    },
    {
      "skill": "codebase_understanding",
      "description": "Codebase understanding",
      "triggers": [
        {
          "type": "keyword",
          "patterns": [
            "understand",
            "analyze",
            "review code",
            "existing code",
            "architecture",
            "structure",
            "understand",
            "analyze",
            "review code",
            "architecture"
          ]
        },
        {
          "type": "file_path",
          "patterns": [
            "**/*.ts",
            "**/*.tsx",
            "**/*.js",
            "**/*.jsx",
            "**/*.py",
            "**/package.json",
            "**/requirements.txt"
          ]
        }
      ]
    },
    {
      "skill": "implementation_protocol",
      "description": "Implementation protocol",
      "triggers": [
        {
          "type": "keyword",
          "patterns": [
            "implement",
            "code",
            "write",
            "create file",
            "modify",
            "implement",
            "code",
            "write",
            "create file",
            "modify"
          ]
        },
        {
          "type": "file_path",
          "patterns": [
            "**/src/**",
            "**/components/**",
            "**/utils/**",
            "**/services/**"
          ]
        },
        {
          "type": "action",
          "patterns": [
            "file_edit",
            "file_create",
            "code_change"
          ]
        }
      ]
    }
  ],
  "settings": {
    "auto_suggest": true,
    "auto_activate": false,
    "show_reason": true
  }
}
